form
  section.calculator
    h3 Calculator
    .form-group
      label # of UNIT tokens
      .input-group
        input(type='number' placeholder='1000' value='1000' min="1000").form-control.input-primary.js-calculator-token-amount-input
        span.input-group-btn
          .input-group-increment
            button.btn.btn-default.btn-increment.btn-up.js-value-up(type='button')
              span.glyphicon.glyphicon-chevron-up
            button.btn.btn-default.btn-increment.btn-down.js-value-down(type='button')
              span.glyphicon.glyphicon-chevron-down

    .form-group
      label Amount of #{currency}
      .input-group
        input(type='number' value='0.000079' data-price='0.000079', data-fiat="730.60").form-control.eth-amount.js-calculator-eth-amount-input
        span.input-group-addon #{currency}

    .form-group
      .horizontal
        label You'll receive:
        output
          span.space-after.js-token-amount 10
          //- span 1 000 000
          span.unit UNIT
      .horizontal
        label #[span.js-token-total-bonus 40]% bonus:
        output
          span.space-after.js-token-bonus-amount 4
          //- span 400 000
          span.unit UNIT

    .form-group.output.text-center
      label Total:
      output.total-amount
        span.space-after.js-token-total-amount 14
        //- span 1 400 000
        span.unit UNIT

    hr

    .form-group.output.text-center
      label Approximate $US amount:
      output.usd-amount
        span.unit $
        span.js-fiat-total-amount 0.00000952
        //- span 9.52