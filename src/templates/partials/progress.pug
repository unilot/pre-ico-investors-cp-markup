.progress
  .progress-goal Goal: 1 975 ETH (25 000 000 UNIT)
  
  .progress-bar(role='progressbar' aria-valuenow='30' aria-valuemin='0' aria-valuemax='100' style='width: 35%')
    
    if progress >= 35
      span.progress-amount.hidden-xs 592.5 ETH Raised
    
    if progress >= 50
      span.progress-amount.visible-xs-inline 592.5 ETH Raised

    span.progress-percentage 30%