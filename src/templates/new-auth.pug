extends base/new-base

block vars
  -var pageTitle = 'Sign in or Sign up';
  -var isAuthorised = false;

block content
  .row

    //- Main content
    .col-md-8.col-sm-12.col-xs-12
      ul.nav.nav-tabs
        li.active(role='presentation')
          a(href='#auth-sign-up', role='tab', aria-controls='auth-sign-up', data-toggle='tab') Sign Up
        li(role='presentation')
          a(href='#auth-sign-in', role='tab', aria-controls='auth-sign-in', data-toggle='tab') Sign In
      
      .tab-content
        #auth-sign-up.tab-pane.active.js-has-overlay(role='tabpanel')
          include lib/overlay-loader
          form.js-generic-form
            .row
              .col-md-12
                .alert.hidden.js-form-alert.text-center
                
                .form-group
                  label.control-label(for='signUpEmail') Email
                  input#signUpEmail.form-control(type='email', placeholder='Email', required, name='email')
                  .help-block.with-errors
                
                .form-group
                  label.control-label(for='signUpPassword') Password
                  input#signUpPassword.form-control(type='password', placeholder='Password', required, name='password')
                  .help-block.with-errors
                
            .row
              include lib/overlay-loader
              .col-xs-12
                button.btn.btn-primary.btn-lg.pull-right(role='submit') Sign me up

        #auth-sign-in.tab-pane.js-has-overlay(role='tabpanel')
          include lib/overlay-loader
          form.js-generic-form
            .row
              .col-md-12
                .alert.hidden.js-form-alert.text-center
                
                .form-group
                  label.control-label(for='signInEmail') Email
                  input#signInEmail.form-control(type='email', placeholder='Email', required, name='email')
                  .help-block.with-errors
                
                .form-group
                  label.control-label(for='signInPassword') Password
                  input#signInPassword.form-control(type='password', placeholder='Password', required, name='password')
                  .help-block.with-errors
                
            .row
              include lib/overlay-loader
              .col-xs-12
                button.btn.btn-primary.btn-lg.pull-right(role='submit') Sign in

    //- Sidebar
    .col-md-4.hidden-sm.hidden-xs
      aside.pull-right
        section
          include partials/timer